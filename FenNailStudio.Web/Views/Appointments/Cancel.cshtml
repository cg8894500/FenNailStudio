@model FenNailStudio.Application.DTOs.AppointmentDto

@{
    ViewData["Title"] = "取消預約";
}

<h1>取消預約</h1>

<h3>您確定要取消此預約嗎？</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">客戶</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>
        <dt class="col-sm-2">美甲師</dt>
        <dd class="col-sm-10">@Model.TechnicianName</dd>
        <dt class="col-sm-2">服務項目</dt>
        <dd class="col-sm-10">@Model.ServiceName</dd>
        <dt class="col-sm-2">預約時間</dt>
        <dd class="col-sm-10">@Model.AppointmentDateTime.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <form asp-action="Cancel">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="確認取消" class="btn btn-warning" />
        <a asp-action="Index" class="btn btn-secondary">返回列表</a>
    </form>
</div>
