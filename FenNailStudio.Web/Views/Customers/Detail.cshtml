@model FenNailStudio.Application.DTOs.CustomerDto

@{
    ViewData["Title"] = "客戶詳情";
}

<h1>客戶詳情</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">姓名</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">電話</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        <dt class="col-sm-2">電子郵件</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">居住地</dt>
        <dd class="col-sm-10">@Model.City</dd>
        <dt class="col-sm-2">職業</dt>
        <dd class="col-sm-10">@Model.Occupation</dd>
        <dt class="col-sm-2">註冊日期</dt>
        <dd class="col-sm-10">@Model.RegisterDate.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">編輯</a>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</div>
