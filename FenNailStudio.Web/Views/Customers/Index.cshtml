@model IEnumerable<FenNailStudio.Application.DTOs.CustomerDto>
@{
    ViewData["Title"] = "客戶列表";
    bool isAdmin = ViewBag.IsAdmin ?? false;
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>姓名</th>
            <th>電子郵件</th>
            <th>電話</th>
            <th>城市</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.City</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info btn-sm">詳細</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">編輯</a>
                    @if (isAdmin)
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">刪除</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
